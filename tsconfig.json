{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "sourceMap": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["webpack-env"],
    "paths": { "@/*": ["src/*"] },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "script/**/*.ts"]
}
